    "version": "0.2.0",
    "configurations": [
        {
            "name": "key value database",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/key_value_db_server",
            "args": [
                "-f", "fit.db",
                "-p", "6713"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for lldb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-lldb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}